pipeline {
    agent any
    tools {
        maven '3.9.6'
    }
    stages {
        stage('Build') {
            steps {
                run 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                run 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                run './jenkins/scripts/deliver.sh'
            }
        }
    }
}
